menu "Audio"
menu "Audio Module"

config AUDIO_MODULE
	tristate "Enable the audio module"
	depends on DATA_FIFO || AUDIO_MODULE_TEST || AUDIO_MODULE_TEMPLATE_TEST

config AUDIO_MODULE_TEST
	bool "Enable test mode"
	default n
	help
	  Enable the test mode for the audio module.

config AUDIO_MODULE_TEMPLATE_TEST
	bool "Enable template test mode"
	default n
	help
	  Enable the test mode for the audio module template.

config AUDIO_MODULE_NAME_SIZE
	int "Maximum size for module naming in characters"
	default 20

endmenu # Audio Module

#----------------------------------------------------------------------------#
menu "Log levels"

module = AUDIO_MODULE
module-str = audio_module
source "subsys/logging/Kconfig.template.log_config"

module = AUDIO_MODULE_TEMPLATE
module-str = audio_module
source "subsys/logging/Kconfig.template.log_config"

endmenu # Log levels

endmenu # Audio
